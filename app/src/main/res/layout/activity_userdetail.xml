<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Art Tseng"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tv_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="2dp"
        />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        tools:text="javaing"
        android:paddingLeft="6dp"
        android:drawableStart="@android:drawable/ic_menu_myplaces"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tv_staff"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Staff"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/white"
        android:background="@drawable/round_button_staff"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:gravity="center"
        tools:text="Taipei"
        android:paddingLeft="6dp"
        android:drawableStart="@android:drawable/ic_dialog_map"
        />

    <TextView
        android:autoLink="web"
        android:id="@+id/tv_blog"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:gravity="center"
        tools:text="https://abc.123"
        android:paddingLeft="6dp"
        android:drawableStart="@android:drawable/ic_dialog_info"
        />


</LinearLayout>